{
    "name": "react-webpack-boilerplate",
    "private": "true",
    "type": "module",
    "eslintConfig": {
        "extends": [
            "@yutengjing/eslint-config-react",
            "plugin:tailwindcss/recommended"
        ],
        "rules": {
            "tailwindcss/classnames-order": "off",
            "tailwindcss/no-custom-classname": "off"
        }
    },
    "stylelint": {
        "extends": "@yutengjing/stylelint-config-basic",
        "rules": {
            "at-rule-no-unknown": [
                true,
                {
                    "ignoreAtRules": [
                        "tailwind"
                    ]
                }
            ]
        }
    },
    "scripts": {
        "dev": "tsx scripts/dev.ts --dev",
        "build": "tsx scripts/build.ts",
        "build:analyze": "tsx scripts/build.ts --analyze",
        "check:type": "tsc -b tsconfig.check.json"
    },
    "dependencies": {
        "antd": "^5.13.2",
        "react": "^18.2.0",
        "react-dom": "^18.2.0"
    },
    "devDependencies": {
        "@pmmmwh/react-refresh-webpack-plugin": "^0.5.11",
        "@rsdoctor/webpack-plugin": "^0.1.0",
        "@swc/core": "^1.3.105",
        "@swc/helpers": "^0.5.3",
        "@types/node": "^20.11.6",
        "@types/react": "^18.2.48",
        "@types/react-dom": "^18.2.18",
        "@types/webpack-bundle-analyzer": "^4.6.3",
        "@yutengjing/eslint-config-react": "^0.5.2",
        "@yutengjing/prettier-config": "^1.0.0",
        "@yutengjing/stylelint-config-basic": "^0.1.0",
        "@yutengjing/tsconfig-node": "^0.0.5",
        "@yutengjing/tsconfig-react": "^0.0.5",
        "browserslist": "^4.22.2",
        "css-loader": "^6.9.1",
        "css-minimizer-webpack-plugin": "^6.0.0",
        "eslint": "^8.56.0",
        "eslint-plugin-tailwindcss": "^3.14.0",
        "html-webpack-plugin": "^5.6.0",
        "lightningcss": "^1.23.0",
        "mini-css-extract-plugin": "^2.7.7",
        "postcss": "^8.4.33",
        "postcss-loader": "^8.0.0",
        "prettier": "^3.2.4",
        "prettier-plugin-tailwindcss": "^0.5.11",
        "react-refresh": "^0.14.0",
        "style-loader": "^3.3.4",
        "stylelint": "^16.2.0",
        "swc-loader": "^0.2.3",
        "tailwindcss": "^3.4.1",
        "terser-webpack-plugin": "^5.3.10",
        "tsx": "^4.7.0",
        "typescript": "^5.3.3",
        "webpack": "^5.90.0",
        "webpack-bundle-analyzer": "^4.10.1",
        "webpack-dev-server": "^4.15.1",
        "webpack-merge": "^5.10.0",
        "webpack-stats-viewer-plugin": "^1.1.1"
    }
}
